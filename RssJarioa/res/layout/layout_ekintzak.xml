<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content" 
  android:paddingBottom="5sp"
  android:paddingTop="5sp" >
 
    <TextView
        android:id="@+id/layout_ekintzak_egune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="22"
        android:textSize="50sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
     
    <TextView
        android:id="@+id/layout_ekintzak_tituloa_agenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="25sp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/layout_ekintzak_imageIconEvent"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/layout_ekintzak_tituloa_agenda"
        android:layout_toRightOf="@id/layout_ekintzak_egune"
        android:src="@drawable/event" />

    <TextView
        android:id="@+id/layout_ekintzak_ordue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_ekintzak_tituloa_agenda"
        android:layout_toRightOf="@id/layout_ekintzak_imageIconEvent"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <ImageView
        android:id="@+id/layout_ekintzak_imageIconPlace"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/layout_ekintzak_tituloa_agenda"
        android:layout_toRightOf="@id/layout_ekintzak_ordue"
        android:src="@drawable/place" />

    <TextView
        android:id="@+id/layout_ekintzak_lekua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_ekintzak_tituloa_agenda"
        android:layout_toRightOf="@id/layout_ekintzak_imageIconPlace"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <ImageView
        android:id="@+id/layout_ekintzak_imageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/navigation_next_item" />

  
</RelativeLayout>